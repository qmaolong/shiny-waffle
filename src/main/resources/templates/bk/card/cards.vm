#parse("common/foot.vm")
<script type="text/javascript">
    $("#table").bootstrapTable({
        data : []
    });

    initEdit({
        addButton : ".add",
        editButton : ".edit",
        lookButton : ".look",
        layerType : 2,
        name : "会员卡",
        content : "$URL/merchant/admin/card/cardInput",
        editUrl : "$URL/merchant/admin/card/cardEdit",
        area : ['90%', '490px'],
        afterClose : function () {
            $("#searchForm").submit();
        }
    })

    function actionFormatter(value, row, index){
        var buttons = [];
        if(isNull(row.mediumKey)){
            //未发卡
        }else if(row.cardState==0){
            buttons.push("<a class='btn btn-primary btn-xs activate-card' href='javascript:void(0)'>激活</a>");
        }else if(row.cardState==1){
            buttons.push("<a class='btn btn-success btn-xs switch-frozen-state' href='javascript:void(0)'>冻结</a>");
        }else if(row.cardState==2){
            buttons.push("<a class='btn btn-warning btn-xs switch-frozen-state' href='javascript:void(0)'>解冻</a>");
        }
        return buttons.join('');
    }
    window.actionEvents = {
        'click .switch-frozen-state': function (e, value, row, index) {//冻结解冻
            var optionName = row.cardState==1?"冻结":"解冻" ;
            layer.confirm('确定'+ optionName +'？', {
                btn: [optionName,'取消'] //按钮
            }, function(){
                jQuery.ajax({
                    url : '$URL/merchant/admin/card/frozenOrUnfrozenCard',
                    data : {tagId : row.tagId},
                    type : "post",
                    success : function(data){
                        if(data.resultCode == 'SUCCESS'){
                            layer.msg(optionName + "成功");
                            $("button[name='refresh']").click();
                        }else {
                            layer.alert(data.errCodeDesc);
                        }
                    }
                })
            }, function(){
                layer.closeAll("dialog");
            });
        },
        'click .activate-card': function (e, value, row, index) {//激活卡
            layer.confirm('确定激活？', {
                btn: ['激活','取消'] //按钮
            }, function(){
                jQuery.ajax({
                    url : '$URL/merchant/admin/card/activateCard',
                    data : {tagId : row.tagId},
                    type : "post",
                    success : function(data){
                        if(data.resultCode == 'SUCCESS'){
                            layer.msg("激活成功")
                            $("button[name='refresh']").click();
                        }else {
                            layer.alert(data.errCodeDesc);
                        }
                    }
                })
            }, function(){
                layer.closeAll("dialog");
            });
        }
    };

    //充值
    $("#cardCharge").on("click", function(){
        var selectedData = getSelectedRow("#table");
        layer.prompt({
            title: '输入要充值的卡编号',
            value : undefined==selectedData?'':selectedData.tagId,
            formType: 0 //prompt风格，支持0-2
        }, function(tagId){
            jQuery.ajax({
                url : "$URL/merchant/admin/card/getCardInfo?tagId=" + tagId,
                type : "post",
                success : function(res){
                    if(res.resultCode == "SUCCESS"){
                        layer.closeAll("dialog");
                        layer.open({
                            title:"卡充值",
                            type: 1,
                            closeBtn: 1, //不显示关闭按钮
                            shift: 2,
                            maxmin: true,
                            area: ['620px', '360px'],
                            shadeClose: true, //开启遮罩关闭
                            content: $("#charge-content").html(),
                            end: function () {
                                $("button[name='refresh']").click();
                            },
                            success : function(layero, index){
                                var cardInfo = res.result;
                                console.log(cardInfo)
                                $("#tagId").val(cardInfo.tagId);
                                $("#objectIdStr").val(cardInfo.objectIdStr);
                                $("#tagIdText").html(cardInfo.tagId);
                                $("#balance").html(cardInfo.balance + "元");

                                $("#chargeForm").validate({submitHandler: function() {
                                    submitEvent("$URL/merchant/admin/card/cardCharge", index, "", "chargeForm", function(data){
                                        if(data.errcode == 0){
                                            var successMsg = '充值成功！<br/>流水号：' + data.seriesNumber + '<br>上次剩余' + data.lastBalance + '，充值：' + data.chargeAmount + '，赠送金额' + data.giftAmount + '，现余额' + data.curBalance;
                                            layer.alert(successMsg, {
                                                skin: 'layui-layer-lan'
                                                ,closeBtn: 0
                                                ,shift: 4 //动画类型
                                            },function(){
                                                layer.close(index);
                                                layer.closeAll("dialog");
                                            });
                                            layer.closeAll("loading");
                                        }else {
                                            layer.alert(data.msg);
                                            layer.closeAll("loading");
                                        }
                                    });
                                }});
                                $("#closeLayer").on("click", function(){
                                    layer.close(index);
                                })
                            }
                        })
                    }else {
                        layer.msg(res.errCodeDesc)
                    }
                }
            })
        });
    })

    $("#importCards").on("click", function(){
        layer.open({
            title:"导入实体卡信息",
            type: 2,
            closeBtn: 1, //不显示关闭按钮
            shift: 2,
            maxmin: true,
            area: ['90%', '460px'],
            shadeClose: true, //开启遮罩关闭
            content: '$URL/merchant/admin/card/importCardsForm',
            end: function () {
                $("button[name='refresh']").click();
            },
            success : function(layero, index){
            }
        })
    })

    $("#generateCards").on("click", function(){
        layer.open({
            title:"批量生成卡",
            type: 2,
            closeBtn: 1, //不显示关闭按钮
            shift: 2,
            maxmin: true,
            area: ['90%', '460px'],
            shadeClose: true, //开启遮罩关闭
            content: '$URL/merchant/admin/card/generateCardsForm',
            end: function () {
                $("button[name='refresh']").click();
            },
            success : function(layero, index){
            }
        })
    })

    function cardsFormatter(value, row, index){
        var buttons = ['<a class="btn btn-sm btn-white btn-bitbucket searchEvent"> <i class="glyphicon glyphicon-search"></i></a>'];
        if (row.cardState<=1&&row.mediumKey!=undefined){
            buttons.push('<a class="btn btn-sm btn-white btn-bitbucket editEvent"> <i class="glyphicon glyphicon-pencil"></i></a>');
        }
        return buttons.join("&nbsp;&nbsp;");
    }

    //初始化筛选表单
    $("#searchForm").validate({submitHandler: function() {
        var formData = getDataFromForm("searchForm");
        layer.load();
        jQuery.ajax({
            url : "$URL/merchant/admin/card/getCardList",
            data : {dataStr : JSON.stringify(formData)},
            type : "get",
            success : function(res){
                $("#table").bootstrapTable('load',{
                    data : responseHandler(res)
                });
                layer.closeAll("loading");
            }
        })
    }});

</script>
