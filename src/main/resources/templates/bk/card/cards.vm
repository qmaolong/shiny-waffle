<body class="gray-bg">
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>条件筛选</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content" style="min-height:132px">
            <form class="form-horizontal" id="searchForm">
                <div class="col-sm-11 b-r m-t-sm">
                    <div class="form-group" style="margin-bottom:4px">
                        <label class="col-sm-1 control-label">编号:</label>
                        <div class="col-sm-3">
                            <input name="tagOrMemberName" class="form-control" type="text"/>
                        </div>
                        <label class="col-sm-1 control-label">姓名:</label>
                        <div class="col-sm-3">
                            <input name="memberName" class="form-control" type="text"/>
                        </div>
                        <label class="col-sm-1 control-label">手机:</label>
                        <div class="col-sm-3">
                            <input name="tel" class="form-control" type="text"/>
                        </div>
                    </div>
                    <div class="form-group" style="margin-bottom:2px">
                        <label class="col-sm-1 control-label">介质:</label>
                        <div class="col-sm-3">
                            <select name="medium" class="form-control" minlength="1" type="text">
                                <option value="">全部</option>
                                <option value="1">IC卡</option>
                                <option value="2">磁卡</option>
                                <option value="3">名卡</option>
                            </select>
                        </div>
                        <label class="col-sm-1 control-label">类型:</label>
                        <div class="col-sm-3">
                            <select name="cardTypeId" class="form-control" minlength="1" type="text">
                                <option value="">全部</option>
                                #foreach($cardType in $cardTypes)
                                    <option value="$cardType.get_id()">$!{cardType.name}</option>
                                #end
                            </select>
                        </div>
                        #if($!shopSuperFlag)
                            <label class="col-sm-1 control-label">适用:</label>
                            <div class="col-sm-3">
                                <select name="isPublic" class="form-control" minlength="1" type="text">
                                    <option value="">全部</option>
                                    <option value="true">总店</option>
                                    <option value="false">本店</option>
                                </select>
                            </div>
                        #end
                    </div>
                    <div class="form-group" style="margin-bottom:2px">
                        <label class="col-sm-1 control-label">状态:</label>
                        <div class="col-sm-3">
                            <select name="cardState" class="form-control" minlength="1" type="text">
                                <option value="">全部</option>
                                <option value="0">未激活</option>
                                <option value="1">已激活</option>
                                <option value="2">已冻结</option>
                                <option value="4">已作废</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-sm-1">
                    <div class="form-group text-center m-t-md">
                        <button class="btn btn-success btn-sm" type="submit">&nbsp;筛选&nbsp;</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- Panel Other -->
    <div class="ibox float-e-margins">

        <div class="ibox-content">
            <div class="row row-lg">

                <div class="col-sm-12">
                    <!-- Example Events -->
                    <div class="example-wrap">
                        <div class="example">
                            <div id="toolbar" class="btn-group">
                                <button type="button" class="btn btn-default add">
                                    <i class="glyphicon glyphicon-plus"></i>&nbsp;新增会员卡
                                </button>
                                <button type="button" class="btn btn-default" id="generateCards">
                                    <i class="fa fa-newspaper-o"></i>&nbsp;批量生成
                                </button>
                                <button type="button" class="btn btn-default" id="importCards">
                                    <i class="glyphicon glyphicon-import"></i>&nbsp;批量导入
                                </button>
                                #*<button type="button" class="btn btn-default edit">
                                    <i class="glyphicon glyphicon-pencil"></i>&nbsp;编辑
                                </button>
                                <button type="button" class="btn btn-default look">
                                    <i class="glyphicon glyphicon-search"></i>&nbsp;查看
                                </button>*#
                                #*<button type="button" class="btn btn-default" id="disableCard">
                                    <i class="glyphicon glyphicon-search"></i>&nbsp;注销
                                </button>*#
                                <button type="button" class="btn btn-default" id="cardCharge">
                                    <i class="glyphicon glyphicon-yen"></i>&nbsp;卡充值
                                </button>
                                #*<button type="button" class="btn btn-default closeFrame">
                                    <i class="glyphicon glyphicon-remove"></i>&nbsp;关闭
                                </button>*#
                            </div>
                            <table id="table" data-height="700"
                                   data-toggle="table"
                                   data-striped="true"
                                   data-query-params="queryParams"
                                   data-pagination="true"
                                   data-show-toggle="true"
                                   data-show-columns="true"
                                   data-page-list="[5, 10, 20, 50, 100, 200]"
                                   data-page-size="10"
                                   data-toolbar="#toolbar" data-mobile-responsive="true"
                                   data-show-export="true"
                                   data-export-data-type="all">
                                <thead>
                                <tr>
##                                    <th data-field="state" data-checkbox="true"></th>
##                                    <th data-formatter="Formatter.runningFormatter">序号</th>
                                    <th data-field="tagId" data-sortable="true">编号</th>
                                    <th data-field="objectIdStr" data-visible="false">卡号</th>
                                    <th data-field="name">卡名称</th>
                                    <th data-field="medium" data-formatter="Formatter.medium">介质</th>
                                    <th data-field="balance">余额</th>
                                    <th data-field="point">积分</th>
                                    <th data-field="cardState" data-formatter="Formatter.cardState">状态</th>
                                    <th data-formatter="cardsFormatter" data-events="rudEvents"></th>
                                    <th class="col-xs-1" data-formatter="actionFormatter" data-events="actionEvents">操作</th>
                                </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                    <!-- End Example Events -->
                </div>
            </div>
        </div>
    </div>
    <!-- End Panel Other -->
</div>
<script type="text/html" id="charge-content">
    <div class="tabs-container" style="width:88%">
        <div class="tab-content">
            <form class="form-horizontal" id="chargeForm"  method="post">
                <input type="hidden" id="tagId" name="tagId" >
                <input type="hidden" id="objectIdStr" name="objectIdStr" >
                <div class="form-group m-t-lg">
                    <label class="col-sm-4 control-label">会员卡编号：</label>
                    <div class="col-sm-8">
                        <p class="form-control-static" id="tagIdText"></p>
                    </div>
                </div>
