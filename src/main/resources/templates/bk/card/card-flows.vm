#parse("common/foot.vm")
<script type="text/javascript">
    $("#table").bootstrapTable({
        url: "$URL/merchant/admin/card/getCardFlows",
        responseHandler : "responseHandler"
    });

    $(".look").on("click", function(){
        var row = getSelectedRow("#table");
        console.log(row)
        if(undefined == row || row.length == 0){
            layer.msg("请先选中一行");
            return;
        }
        layer.open({
            title:"流水单详情",
            type: 2,
            closeBtn: 1, //不显示关闭按钮
            shift: 2,
            maxmin: true,
            area: ['960px', '360px'],
            shadeClose: true, //开启遮罩关闭
            content:'$URL/merchant/admin/card/cardFlowDetail?seriesNumber=' + row.seriesNumber,
            end: function () {
                $("button[name='refresh']").click();
            },
            success : function(layero, index){

            }
        })
    })

</script>
