#parse("common/foot.vm")
<script type="text/javascript">
    $("#table").bootstrapTable({
        url: "$URL/merchant/admin/card/getCardTypeList",
        responseHandler : "responseHandler"
    });

    function typeFormatter(data){
        if(data)
            return '总店';
        else
            return '分店';
    }

    //初始化增删改查配置
    initEdit({
        name : "卡类型",
        addButton : ".add",
        editButton : ".edit",
        deleteButton : ".delete",
        lookButton : ".look",
        layerType : 2,
        content : "$URL/merchant/admin/card/cardTypeInput",
        editUrl : "$URL/merchant/admin/card/editCardType",
        area : ['90%', '490px']
    })

    function actionFormatter(value, row, index){
        return ["<a class='btn btn-success btn-rounded btn-sm discount-rules' href='javascript:void(0)'>优惠策略</a>",
                "<a class='btn btn-success btn-rounded btn-sm charge-rules' href='javascript:void(0)'>充值策略</a>"
        ].join('');
    }

    window.actionEvents = {
        'click .discount-rules': function (e, value, row, index) {//优惠策略
##            location.href = '$URL/merchant/admin/card/cardDiscountRules?cardId=' + row.id;
##            window.open('$URL/merchant/admin/card/cardDiscountRules?cardId=' + row.id, '_blank');
            layer.open({
                type: 2,
                title: row.name + '-优惠策略',
                shadeClose: true,
                maxmin: true,
                area: ['95%', '90%'],
                content: '$URL/merchant/admin/card/cardDiscountRules?cardId=' + row.id
            });
        },
    };

</script>
</body>
</html>
