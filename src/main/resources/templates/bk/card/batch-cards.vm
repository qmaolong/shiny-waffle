<script src="$URL/asset/bk/js/bootstrap-table-export.js?v=1"></script>
<script src="$URL/asset/bk/js/tableExport.js"></script>
#parse("common/foot.vm")
<script type="text/javascript">
    $("#table").bootstrapTable({
        url: "$URL/merchant/admin/card/getBatchCards?batchId=$!batchId",
        responseHandler : "responseHandler"
    });

    initEdit({
        addButton : ".add",
        editButton : ".edit",
        lookButton : ".look",
        layerType : 2,
//        name : "会员卡",
        hiddenTitle:true,
        content : "$URL/merchant/admin/card/cardInput",
        editUrl : "$URL/merchant/admin/card/cardEdit",
        area : ['90%', '360px']
    })

    function actionFormatter(value, row, index){
        var buttons = [];
        if(isNull(row.mediumKey)){
            //未发卡
        }else if(row.cardState<3){
            buttons.push("<a class='btn btn-primary btn-xs disable-card' href='javascript:void(0)'>点击作废</a>");
        }
        return buttons.join('');
    }
    window.actionEvents = {
        'click .disable-card': function (e, value, row, index) {//激活卡
            layer.confirm('确定作废？', {
                btn: ['作废','取消'] //按钮
            }, function(){
                jQuery.ajax({
                    url : '$URL/merchant/admin/coupon/disableCoupon',
                    data : {tagId : row.tagId},
                    type : "post",
                    success : function(data){
                        if(data.resultCode == 'SUCCESS'){
                            layer.msg("已作废")
                            $("button[name='refresh']").click();
                        }else {
                            layer.alert(data.errCodeDesc);
                        }
                    }
                })
            }, function(){
                layer.closeAll("dialog");
            });
        }
    };


</script>
</body>
</html>
