#parse("templates/common/foot.vm")
<script type="text/javascript">
    $("#table").bootstrapTable({
        url: "$URL/merchant/admin/shop/getCashiersList",
        responseHandler : "responseHandler"
    });

    initEdit({
        name : "收银台",
        addButton : ".add",
        editButton : ".edit",
        deleteButton : ".delete",
        lookButton : ".look",
        editUrl : "$URL/merchant/admin/shop/editCashiers",
        area : ['80%', '280px']
    })

    function actionFormatter(){
        return ['<a class="btn btn-sm btn-white btn-bitbucket searchEvent"> <i class="glyphicon glyphicon-search"></i></a>'].join("");
    }

    $(".unBind").on("click", function(){
        var row = getSelectedRow("#table");
        if(isNull(row)){
            layer.msg("请先选中一行");
            return;
        }
        layer.confirm('确认解绑？', {
            btn: ['确认', '取消'] //按钮
        }, function () {
            jQuery.ajax({
                url : "$URL/merchant/admin/shop/unBindCashier",
                data : {dataStr : JSON.stringify(row)},
                type : "post",
                success : function(res){
                    if(res.resultCode == 'SUCCESS'){
                        layer.msg("操作成功！");
                        $("button[name='refresh']").click();
                        layer.closeAll("loading");
                        closeCurrentLayerPage();
                    }else {
                        layer.alert(res.errCodeDesc);
                        layer.closeAll("loading");
                    }
                }
            })
        }, function () {

        });

    })

</script>
