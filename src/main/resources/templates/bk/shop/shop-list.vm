<!DOCTYPE html>
<html>
<head>
    #parse("common/base-bk.vm")
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>门店列表</title>

     <link href="$URL/asset/bk/css/bootstrap.min14ed.css?v=3.3.6" rel="stylesheet">
    <link href="$URL/asset/bk/css/font-awesome.min93e3.css?v=4.4.0" rel="stylesheet">
    <link href="$URL/asset/bk/css/plugins/bootstrap-table/bootstrap-table.min.css" rel="stylesheet">
    <link href="$URL/asset/bk/css/animate.min.css" rel="stylesheet">
    <link href="$URL/asset/bk/css/style.min862f.css?v=4.1.0" rel="stylesheet">
</head>

<body class="gray-bg">
<div class="wrapper wrapper-content animated fadeInRight">

    <!-- Panel Other -->
    <div class="ibox float-e-margins">

        <div class="ibox-content">
            <div class="row row-lg">

                <div class="col-sm-12">
                    <!-- Example Events -->
                    <div class="example-wrap">
                        <div class="example">
                            <div id="toolbar" class="btn-group">
                                #if(${userSession.role} == "owner")
                                    <button type="button" class="btn btn-default add">
                                        <i class="glyphicon glyphicon-plus"></i>&nbsp;新建
                                    </button>
                                #end
                                #*<button type="button" class="btn btn-default edit">
                                    <i class="glyphicon glyphicon-pencil"></i>&nbsp;编辑
                                </button>
                                #if(${userSession.role} == "owner")
                                <button type="button" class="btn btn-default delete">
                                    <i class="glyphicon glyphicon-trash"></i>&nbsp;删除
                               </button>
                                #end
                                <button type="button" class="btn btn-default look">
                                    <i class="glyphicon glyphicon-search"></i>&nbsp;查看
                                </button>*#
                                #*<button type="button" class="btn btn-default closeFrame">
                                    <i class="glyphicon glyphicon-remove"></i>&nbsp;关闭
                                </button>*#
                            </div>
                            <table id="table" data-height="700"
                                   data-toggle="table"
                                   data-striped="true"
                                   data-query-params="queryParams"
                                   data-pagination="true"
                                   data-search="true"
                                   data-show-refresh="true"
                                   data-show-toggle="true"
                                   data-show-columns="true"
                                   data-page-list="[5, 10, 20, 50, 100, 200]"
                                   data-page-size="15"
                                   data-toolbar="#toolbar" data-mobile-responsive="true"
                                   data-show-export="true"
                                   data-export-data-type="all">
                                <thead>
                                <tr>
##                                    <th data-field="state" data-checkbox="true"></th>
                                    <th data-field="encodeId" data-sortable="true">门店编号</th>
                                    <th data-field="name">名称</th>
                                    <th data-field="superFlag"  data-formatter="typeFormatter">类型</th>
                                    #*<th data-field="ownerName">店长</th>
                                    <th data-field="address">地址</th>*#
                                    <th data-field="createTime" data-formatter="Formatter.date">创建时间</th>
                                    <th data-formatter="rudFormatter" data-events="rudEvents">操作</th>
                                    <th data-field="action" data-formatter="actionFormatter" data-events="actionEvents">切换</th>
                                </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                    <!-- End Example Events -->
                </div>
            </div>
        </div>
    </div>
    <!-- End Panel Other -->
</div>
<script type="text/html" id="edit-content">
    <div class="tabs-container">
        <div class="tab-content">
            <div id="tab-1" class="tab-pane active">
                <div class="ibox-content">
                    <form class="form-horizontal m-t" id="signupForm" method="post">
                        <input type="hidden" name="oper" value="#if($!{shop})edit#elseif(true)add#end">
                        <input type="hidden" name="id" value="$!{shop.id}">
                        <input type="hidden" name="objectIdStr" value="$!{shop.objectIdStr}">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">名称：</label>
                                <div class="col-sm-8">
                                    <input id="name" name="name" class="form-control" minlength="2" type="text" required value="$!{shop.name}">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">地址：</label>
                                <div class="col-sm-8">
                                    <input id="address" name="address" class="form-control" type="text"  required="true" value="$!{shop.address}">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">店长：</label>
                                <div class="col-sm-8">
                                    <input id="ownerName" name="ownerName" class="form-control" type="text" required="true" value="$!{shop.ownerName}">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">联系电话：</label>
                                <div class="col-sm-8">
                                    <input id="phone" name="phone" class="form-control" type="tel" value="$!{shop.phone}">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-7 col-sm-offset-5">
                                <button class="btn btn-primary" type="submit">提交</button>
                                <button class="btn btn-primary" type="button" id="closeLayer">关闭</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</script>
<script src="$URL/asset/bk/js/jquery.min.js?v=2.1.4"></script>
<script src="$URL/asset/bk/js/bootstrap.min.js?v=3.3.6"></script>
<script src="$URL/asset/bk/js/plugins/bootstrap-table/bootstrap-table.min.js"></script>
<script src="$URL/asset/bk/js/plugins/bootstrap-table/bootstrap-table-mobile.min.js"></script>
<script src="$URL/asset/bk/js/plugins/bootstrap-table/locale/bootstrap-table-zh-CN.min.js"></script>
<script src="$URL/asset/bk/js/plugins/layer/layer.min.js"></script>
<script src="$URL/asset/bk/js/plugins/layer/laydate/laydate.js"></script>
<script src="$URL/asset/bk/js/plugins/validate/jquery.validate.min.js"></script>
<script src="$URL/asset/bk/js/plugins/validate/messages_zh.min.js"></script>
<script src="$URL/asset/bk/js/bootstrap-table-export.js?v=$timestamp"></script>
<script src="$URL/asset/bk/js/tableExport.js?v=$timestamp"></script>
#parse("common/foot.vm")
<script type="text/javascript">
    $("#table").bootstrapTable({
        url: "$URL/merchant/shopList",
        responseHandler : "responseHandler"
    });

    function typeFormatter(data){
        if(data)
            return '总店';
        else
            return '分店';
      }

    initEdit({
        addButton : ".add",
        editButton : ".edit",
        deleteButton : ".delete",
        lookButton : ".look",
        editUrl : "$URL/merchant/admin/shop/editShop",
        area : ['80%', '430px']
    })

    function actionFormatter(value, row, index){
        return ['<a class="btn btn-sm btn-white btn-bitbucket switch-shop"> <i class="fa fa-sign-in"></i>&nbsp;点击切换</a>'].join("");
    }

    window.actionEvents = {
        'click .switch-shop': function (e, value, row, index) {//优惠策略
            jQuery.ajax({
                url : '$URL/merchant/switchShop',
                type : 'post',
                data : {dataStr: JSON.stringify(row)},
                success : function(res){
                    if(res.resultCode == 'SUCCESS'){
                        parent.layer.msg("操作成功！", function(){
                            top.location.href = "$URL/merchant/main";
                        });
                    }else {
                        layer.alert(res.errCodeDesc);
                        layer.closeAll("loading");
                    }
                }
            })
        },
    };

</script>
</body>
</html>
