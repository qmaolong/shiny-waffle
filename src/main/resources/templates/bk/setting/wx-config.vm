<!DOCTYPE html>
<html>
<head>
    #parse("common/base-bk.vm")
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>$TITLE</title>
    <link href="$URL/asset/bk/css/bootstrap.min14ed.css?v=3.3.6" rel="stylesheet">
    <link href="$URL/asset/bk/css/font-awesome.min93e3.css?v=4.4.0" rel="stylesheet">
    <link href="$URL/asset/bk/css/animate.min.css" rel="stylesheet">
    <link href="$URL/asset/bk/css/style.min862f.css?v=4.1.0" rel="stylesheet">
    <link href="$URL/asset/bk/plugins/lou-multi-select-7a5354c/css/multi-select.css" media="screen" rel="stylesheet" type="text/css">
    <link href="$URL/asset/bk/css/plugins/iCheck/custom.css" rel="stylesheet">
</head>

<body class="gray-bg">
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>公众号配置</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="form_basic.html#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li><a href="form_basic.html#">选项1</a>
                            </li>
                            <li><a href="form_basic.html#">选项2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content text-center">
                    <form class="form-horizontal m-t" id="signupForm" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">使用系统配置：</label>
                            <div class="col-sm-3">
                                <div class="radio i-checks">
                                    <label>
                                        <input type="radio" value="false" name="useSystem" #if(!$!{wxConfig.useSystem})checked#end> <i></i>否</label>
                                    <label>
                                        <input type="radio" value="true" name="useSystem" #if($!{wxConfig.useSystem})checked#end> <i></i>是</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group private-area">
                            <label class="col-sm-3 control-label">公众号名称：</label>
                            <div class="col-sm-6">
                                <input name="appName" class="form-control" #if(!$!{wxConfig.useSystem})value="$!{wxConfig.appName}"#end type="text" required>
                                <span class="help-block m-b-none">
                            </div>
                        </div>
                        <div class="form-group private-area">
                            <label class="col-sm-3 control-label">AppId：</label>
                            <div class="col-sm-6">
                                <input name="appId" class="form-control" #if(!$!{wxConfig.useSystem})value="$!{wxConfig.appId}"#end  type="text" required>
                                <span class="help-block m-b-none">
                            </div>
                        </div>
                        <div class="form-group private-area">
                            <label class="col-sm-3 control-label">AppSecret：</label>
                            <div class="col-sm-6">
                                <input name="appSecret" class="form-control" #if(!$!{wxConfig.useSystem})value="$!{wxConfig.appSecret}"#end value="$!{wxConfig.appSecret}" type="password" required>
                                <span class="help-block m-b-none">
                            </div>
                        </div>
                        <div class="form-group private-area">
                            <label class="col-sm-3 control-label">回调页面域名：</label>
                            <div class="col-sm-6">
                                <input class="form-control" value="wx.co-villa.com/s$!shopIdSession" type="text" readonly>
                                <span class="help-block m-b-none">
                            </div>
                        </div>
                        <div class="form-group private-area">
                            <label class="col-sm-3 control-label">授权验证文件：</label>
                            <div class="col-sm-6">
                                <input name="file" class="form-control" type="file" required>
                                <span class="help-block m-b-none">
                                <label class=""><a href="javascript:showTip()">点击查看提示</a> </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-8 col-sm-offset-1">
                                <button class="btn btn-primary" type="submit">提交</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/html" id="tip-content">
    <div class="wrapper wrapper-content  animated fadeInRight article">
        <div class="row">
            <div class="col-md-10 col-lg-offset-1">
                <div class="ibox">
                    <div class="ibox-content">
                        <div class="text-center article-title">
                            <h2>
                                设置公众号授权链接
                            </h2>
                        </div>
                        <h5>第一步：</h5>
                        <p>
                            登录公众平台
                        </p>
                        <h5>第二步：</h5>
                        <p>
                            选择“接口权限”——“网页授权获取用户基本信息”——“修改”<br/>
                            <img src="$URL/asset/bk/img/example/wx-auth-file-tip.png" width="100%">
                        </p>
                        <h5>第三步：</h5>
                        <p>
                            设置网页授权域名<br/>
                            <img src="$URL/asset/bk/img/example/wx-auth-file-tip2.jpg" width="100%">
                        </p>
                        <h5>第四步：</h5>
                        <p>
                            下载文件到电脑<br/>
                            <img src="$URL/asset/bk/img/example/wx-auth-file-tip3.jpg" width="60%">
                        </p>
                        <h5>第五步：</h5>
                        <p>
                            将下载的文件上传至系统后台公众号设置<br/>
                        </p>
                        <h5>第六步：</h5>
                        <p>
                            系统后台参数设置成功后，将“<strong>wx.co-villa.com/s$!shopIdSession</strong>”拷贝设置到公众号网页授权域名中。<br/>
                        </p>
                    </div>
                </div>
            </div>
        </div>

    </div>
</script>
<script src="$URL/asset/bk/js/jquery.min.js?v=2.1.4"></script>
<script src="$URL/asset/bk/js/bootstrap.min.js?v=3.3.6"></script>
<script src="$URL/asset/bk/js/plugins/layer/layer.min.js"></script>
<script src="$URL/asset/bk/js/plugins/validate/jquery.validate.min.js"></script>
<script src="$URL/asset/bk/js/plugins/validate/messages_zh.min.js"></script>
<script src="$URL/asset/bk/plugins/lou-multi-select-7a5354c/js/jquery.multi-select.js" type="text/javascript"></script>
<script src="$URL/asset/bk/js/plugins/iCheck/icheck.min.js"></script>
#parse("common/foot.vm")
<script type="text/javascript">
    $(document).ready(function(){$(".i-checks").iCheck({checkboxClass:"icheckbox_square-green",radioClass:"iradio_square-green",})});

    #if($!{wxConfig.useSystem})
    $(".private-area").addClass("hidden");
    #end

    $("#signupForm").validate({submitHandler: function() {
        var formData =  new FormData($("#signupForm")[0])
        jQuery.ajax({
            url : "$URL/merchant/admin/setting/editWxConfig",
            type: 'POST',
            async: false,
            cache: false,
            contentType: false,
            processData: false,
            data: formData,
            success: function (res) {
                if(res.resultCode == 'SUCCESS'){
                    layer.alert("操作成功！", function(){
                        location.href = location.href;
                    });
                    layer.closeAll("loading");
                    closeCurrentLayerPage();
                }else {
                    layer.alert(res.errCodeDesc);
                    layer.closeAll("loading");
                }
            },
            error: function () {
                layer.alert("网络错误~");
            }
        })
    }})

    $("input[name='useSystem']").on("ifChecked", function () {
        var useSystem = $(this).val();
        if (useSystem=='false'){
            $(".private-area").removeClass("hidden");
        }else {
            $(".private-area").addClass("hidden");
        }
    })
    function showTip() {
        layer.open({
            title:"提示",
            type: 1,
            closeBtn: 1, //不显示关闭按钮
            shift: 2,
            maxmin: true,
            area: ['85%', '520px'],
            shadeClose: true, //开启遮罩关闭
            content: $("#tip-content").html(),
            end: function () {
                $("button[name='refresh']").click();
            },
            success : function(layero, index){

            }
        })
    }
</script>
</body>
</html>
