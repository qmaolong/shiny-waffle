<script type="text/javascript">
    $("#table").bootstrapTable({
        url: "$URL/merchant/admin/setting/getAuthKeys",
        responseHandler : "responseHandler"
    });
    function actionFormatter(value, row){
        if(row.key.indexOf("TEST")==0){
            var buttons = ["<a class='btn btn-primary btn-xs download-auth-key' href='javascript:void(0)'>点击下载</a>"];
            return buttons.join('');
        }else {
            return "";
        }
    }
    window.actionEvents = {
        'click .download-auth-key': function (e, value, row, index) {
            layer.confirm('确定下载？', {
                btn: ['下载','取消'] //按钮
            }, function(){
                window.open('$URL/merchant/admin/setting/downloadAuthKey?key=' + row.key);
                layer.closeAll("dialog");
            }, function(){
                layer.closeAll("dialog");
            });
        }
    };
</script>
