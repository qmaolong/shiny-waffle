                                    <th data-formatter="Formatter.runningFormatter">序号</th>
                                    <th data-field="describe">名称</th>
                                    <th data-field="givePoint" data-formatter="Formatter.bool">支持积分</th>
                                    <th data-field="giveTicket" data-formatter="Formatter.bool">开发票</th>
                                    <th data-field="activated" data-formatter="Formatter.bool">是否启用</th>
