<!DOCTYPE html>
<html>
<head>
    #parse("templates/common/base-bk.vm")
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>小票格式列表</title>

     <link href="$URL/asset/bk/css/bootstrap.min14ed.css?v=3.3.6" rel="stylesheet">
    <link href="$URL/asset/bk/css/font-awesome.min93e3.css?v=4.4.0" rel="stylesheet">
    <link href="$URL/asset/bk/css/plugins/bootstrap-table/bootstrap-table.min.css" rel="stylesheet">
    <link href="$URL/asset/bk/css/animate.min.css" rel="stylesheet">
    <link href="$URL/asset/bk/css/style.min862f.css?v=4.1.0" rel="stylesheet">
    <link href="$URL/asset/bk/css/plugins/clockpicker/clockpicker.css" rel="stylesheet">
</head>

<body class="gray-bg">
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>条件筛选</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content" style="min-height:112px">
            <form class="form-horizontal" id="searchForm">
                <div class="col-sm-10 b-r m-t-sm">
                    <div class="form-group" style="margin-bottom:4px">
                        <label class="col-sm-2 control-label">门店:</label>
                        <div class="col-sm-3">
                            <select name="shopId" class="form-control" minlength="1" type="text">
                                <option value="">全部</option>
                                #foreach($shop in $!shopList)
                                    <option value="$!{shop.objectIdStr}" #if($!{shop.objectIdStr}==$!shopIdSession)selected#end>$!{shop.name}</option>
                                #end
                            </select>
                        </div>

                        <label class="col-sm-1 control-label">日期:</label>
                        <div class="col-sm-5">
                            <div class="input-daterange input-group" id="datepicker">
                                <input type="text" class="input-sm form-control" data-type="date" name="startDate" />
                                <span class="input-group-addon">到</span>
                                <input type="text" class="input-sm form-control" data-type="date" name="endDate" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group" style="margin-bottom:2px">
                        <label class="col-sm-2 control-label">操作人员:</label>
                        <div class="col-sm-3">
                            <select name="operator" class="form-control" minlength="1" type="text">
                                <option value="">全部</option>
                                #foreach($section in $sections)
                                    #foreach($clerk in ${section.clerks})
                                        <option value="$!{clerk.name}">$!{clerk.name}</option>
                                    #end
                                #end
                            </select>
                        </div>
                        <label class="col-sm-1 control-label">时段:</label>
                        <div class="col-sm-5">
                            <div class="input-daterange input-group" id="datepicker">
                                <div class="input-group clockpicker" data-autoclose="true">
                                    <input type="text" class="input-sm form-control" name="dayOn" value="00:00">
                                </div>
                                <span class="input-group-addon">到</span>
                                <div class="input-group clockpicker" #*data-placement="left" data-align="top"*# data-autoclose="true">
                                    <input type="text" class="input-sm form-control" name="dayOff" value="23:59">
                                    <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-time"></span>
                                        </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-2">
                #*<div class="form-group text-center m-t-xs" style="margin-bottom:5px">
                    <button class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown" type="button">快速<span class="caret"></span></button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#" id="addSingle">本月</a></li>
                        <li class="divider"></li>
                        <li><a href="#" id="addSuite">本周</a></li>
                    </ul>
                </div>*#
                    <div class="form-group text-center m-t-md">
                        <button class="btn btn-success btn-sm" type="submit">&nbsp;筛选&nbsp;</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- Panel Other -->
    <div class="ibox float-e-margins">

        <div class="ibox-content">
            <div class="row row-lg">

                <div class="col-sm-12">
                    <!-- Example Events -->
                    <div class="example-wrap">
                        <div class="example">
                            <div id="toolbar" class="btn-group">
                                #*<button type="button" class="btn btn-default add">
                                    <i class="glyphicon glyphicon-plus"></i>&nbsp;添加
                                </button>
                                <button type="button" class="btn btn-default edit">
                                    <i class="glyphicon glyphicon-pencil"></i>&nbsp;编辑
                                </button>
                                <button type="button" class="btn btn-default delete">
                                    <i class="glyphicon glyphicon-trash"></i>&nbsp;删除
                               </button>*#
                                <button type="button" class="btn btn-default look">
                                    <i class="glyphicon glyphicon-search"></i>&nbsp;查看
                                </button>
                                #*<button type="button" class="btn btn-default closeFrame">
                                    <i class="glyphicon glyphicon-remove"></i>&nbsp;关闭
                                </button>*#
                            </div>
                            <table id="table" data-height="600"
                                   data-toggle="table"
                                   data-striped="true"
                                   data-query-params="queryParams"
                                   data-pagination="true"
                                   data-search="true"
                                   data-show-refresh="true"
                                   data-show-toggle="true"
                                   data-show-columns="true"
                                   data-page-list="[5, 10, 20, 50, 100, 200]"
                                   data-page-size="15"
                                   data-toolbar="#toolbar" data-mobile-responsive="true"
                                   data-show-export="true"
                                   data-export-data-type="all">
                                <thead>
                                <tr>
##                                    <th data-field="state" data-checkbox="true"></th>
##                                    <th data-formatter="Formatter.runningFormatter">序号</th>
                                    <th data-field="id" data-searchCol="true">ID</th>
                                    <th data-field="orderTypeName" >类型</th>
                                    <th data-field="state" data-formatter="Formatter.orderState">订单状态</th>
                                    <th data-field="deskName" data-searchCol="true">桌台</th>
                                    <th data-field="people" >人数</th>
                                    <th data-field="amount" >应收金额</th>
                                    <th data-field="payedAmount" >实收金额</th>
                                    <th data-field="remark" >备注</th>
                                    <th data-field="payTime" data-formatter="Formatter.time" data-searchCol="true" data-searchType="date">支付时间</th>
                                </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                    <!-- End Example Events -->
                </div>
            </div>
        </div>
    </div>
    <!-- End Panel Other -->
</div>
<script src="$URL/asset/bk/js/jquery.min.js?v=2.1.4"></script>
<script src="$URL/asset/bk/js/bootstrap.min.js?v=3.3.6"></script>
<script src="$URL/asset/bk/js/plugins/bootstrap-table/bootstrap-table.min.js"></script>
<script src="$URL/asset/bk/js/plugins/bootstrap-table/bootstrap-table-mobile.min.js"></script>
<script src="$URL/asset/bk/js/plugins/bootstrap-table/locale/bootstrap-table-zh-CN.min.js"></script>
<script src="$URL/asset/bk/js/plugins/layer/layer.min.js"></script>
<script src="$URL/asset/bk/js/plugins/layer/laydate/laydate.js"></script>
<script src="$URL/asset/bk/js/plugins/validate/jquery.validate.min.js"></script>
<script src="$URL/asset/bk/js/plugins/validate/messages_zh.min.js"></script>
<script src="$URL/asset/bk/js/bootstrap-table-toolbar.js"></script>
<script src="$URL/asset/bk/js/bootstrap-table-export.js?v=1"></script>
<script src="$URL/asset/bk/js/tableExport.js"></script>
<script src="$URL/asset/bk/js/plugins/clockpicker/clockpicker.js"></script>
#parse("templates/common/foot.vm")
<script type="text/javascript">
    $("#table").bootstrapTable({
        data: []
    });
    $('.clockpicker').clockpicker({
        afterShow : function(){
            $(".clockpicker-popover").css("z-index", "999999999");
        }
    })
    //初始化筛选表单
    $("#searchForm").validate({submitHandler: function() {
        var formData = getDataFromForm("searchForm");
        layer.load();
        jQuery.ajax({
            url : "$URL/merchant/admin/order/getOrders",
            data : {dataStr : JSON.stringify(formData)},
            type : "get",
            success : function(res){
                $("#table").bootstrapTable('load',{
                    data : responseHandler(res)
                });
                layer.closeAll("loading");
            }
        })
    }});

    $(".look").on("click", function(){
        var row = getSelectedRow("#table");
        if(isNull(row)){
            layer.msg("请先选中一行");
            return;
        }
        layer.open({
            title: "订单详情",
            type:2,
            skin: 'layui-layer-demo', //样式类名
            closeBtn: 1, //不显示关闭按钮
            shift: 2,
            maxmin: true,
            area: ['90%', '490px'],
            shadeClose: false, //开启遮罩关闭
            content: '$URL/merchant/admin/order/orderDetail?orderNo=' + row.id,
            end: function () {
                $("button[name='refresh']").click();
            },
            success: function (layero, index) {

            }
        })
    })

    //默认查询当月数据
    var firstMonthDay = new Date().Format("yyyy-MM-01");
    $("input[name='startDate'").val(firstMonthDay);
    $("#searchForm").submit();

</script>
</body>
</html>
