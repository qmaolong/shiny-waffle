<!DOCTYPE html>
<html>
<head>
    #parse("templates/common/base-bk.vm")
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title></title>
       <link href="$URL/asset/bk/css/bootstrap.min14ed.css?v=3.3.6" rel="stylesheet">
    <link href="$URL/asset/bk/css/font-awesome.min93e3.css?v=4.4.0" rel="stylesheet">
    <link href="$URL/asset/bk/css/plugins/bootstrap-table/bootstrap-table.min.css" rel="stylesheet">
    <link href="$URL/asset/bk/css/animate.min.css" rel="stylesheet">
    <link href="$URL/asset/bk/css/style.min862f.css?v=4.1.0" rel="stylesheet">
</head>
<body class="gray-bg">
<div class="col-sm-12">
    <div class="ibox float-e-margins">
            <div class="ibox-content profile-content col-sm-offset-3">
                <img alt="image" class="" src="$!{qrcodeUrl}" style="width:60%;margin-left:18%">
            </div>
            <div class="ibox-content profile-content text-center">
                <h4><strong id="tip">请用微信扫描二维码</strong></h4>
            </div>
    </div>
</div>
<script src="$URL/asset/bk/js/jquery.min.js?v=2.1.4"></script>
<script src="$URL/asset/bk/js/plugins/layer/layer.min.js"></script>
    #parse("templates/common/foot.vm")
<script>
$(function(){
    var state = 0;
    var interval = setInterval(function(){
        jQuery.ajax({
            url : '$URL/merchant/getRegistState',
            type : "get",
            success : function(res){
                if(res.resultCode == 'SUCCESS' && !isNull(res.result)){
                    layer.msg("操作成功！");
                    parent.$("input[name='nickName']").val(res.result.nickname);
                    parent.$("input[name='headImgUrl']").val(res.result.headimgurl);
                    parent.$("input[name='province']").val(res.result.province);
                    parent.$("input[name='city']").val(res.result.city);
                    parent.$("input[name='sex']").val(res.result.sex);
                    parent.$("input[name='subscribe']").val(res.result.subscribe);
                    parent.$("input[name='openId']").val(res.result.openid);
                    parent.layer.msg("扫描成功！");
                    closeCurrentLayerPage();
                }else if(res.resultCode == 'FAIL'){
                    layer.alert(res.errCodeDesc);
                    layer.closeAll("loading");
                }
            }
        })
    },1000)
})
</script>

</body>
</html>
