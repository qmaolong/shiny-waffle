<!DOCTYPE html>
<html>
<head>
    #parse("common/base-bk.vm")
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title></title>
     <link href="$URL/asset/bk/css/bootstrap.min14ed.css?v=3.3.6" rel="stylesheet">
    <link href="$URL/asset/bk/css/font-awesome.min93e3.css?v=4.4.0" rel="stylesheet">
    <link href="$URL/asset/bk/css/plugins/bootstrap-table/bootstrap-table.min.css" rel="stylesheet">
    <link href="$URL/asset/bk/css/animate.min.css" rel="stylesheet">
    <link href="$URL/asset/bk/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="$URL/asset/bk/css/style.min862f.css?v=4.1.0" rel="stylesheet">
    <link href="$URL/asset/bk/plugins/webuploader/webuploader.css" rel="stylesheet">
</head>
<body class="gray-bg">
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="tabs-container">
                <div class="tab-content">
                    <!-- 选项卡1-->
                    <div id="tab-1" class="tab-pane active">
                        <div class="ibox-content">
                            <form class="form-horizontal" id="signupForm" method="post">
                                <div class="form-group m-t-lg">
                                    <label class="col-sm-2 control-label">方案名称：</label>
                                    <div class="col-sm-4">
                                        <input name="name" class="form-control" type="text" required #if($oper=='edit')readonly="true"#end>
                                    </div>
                                    <label class="col-sm-2 control-label">方案类型：</label>
                                    <div class="col-sm-4">
                                        <select name="type" class="form-control" minlength="1" type="text" required>
                                            <option value="0">按桌台区域</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <table id="itemsTable" class="table"  data-classes="table table-hover table-condensed" data-mobile-responsive="true"  data-height="250" data-mobile-responsive="true">
                                    <thead>
                                    <tr>
                                        <th data-formatter="Formatter.runningFormatter">序号</th>
                                        <th data-field="name">名称</th>
                                        <th data-field="printer1" data-formatter="Formatter.none">第一厨打</th>
                                        <th data-field="printer2" data-formatter="Formatter.none">第一厨打</th>
                                        <th data-field="printer3" data-formatter="Formatter.none">第一厨打</th>
                                        <th data-field="printerControl" data-formatter="Formatter.none">控菜厨打</th>
                                    </tr>
                                    </thead>
                                </table>
                                <div class="form-group toolbar">
                                    <div class="col-sm-7 col-sm-offset-5 m-t-lg">
                                        #if($oper != "look")
                                            <button class="btn btn-primary" type="submit">提交</button>
                                        #end
                                        <button class="btn btn-primary" type="button" id="closeLayer">关闭</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<script src="$URL/asset/bk/js/jquery.min.js?v=2.1.4"></script>
<script src="$URL/asset/bk/js/bootstrap.min.js?v=3.3.6"></script>
<script src="$URL/asset/bk/js/plugins/bootstrap-table/bootstrap-table.min.js"></script>
<script src="$URL/asset/bk/js/plugins/bootstrap-table/bootstrap-table-mobile.min.js"></script>
<script src="$URL/asset/bk/js/plugins/bootstrap-table/locale/bootstrap-table-zh-CN.min.js"></script>
<script src="$URL/asset/bk/js/plugins/layer/layer.min.js"></script>
<script src="$URL/asset/bk/js/plugins/layer/laydate/laydate.js"></script>
<script src="$URL/asset/bk/js/plugins/validate/jquery.validate.min.js"></script>
<script src="$URL/asset/bk/js/plugins/validate/messages_zh.min.js"></script>
#parse("common/foot.vm")
<script>
    var rooms = #if($!rooms)$!rooms#else[]#end;
    //加载上层编辑的数据
    if("add" != "$oper"){
        var parentEditObj = parent.Global.editObj;
        iniDataToForm(parentEditObj);
        rooms = parent.Global.editObj.items;
    }

    $("#itemsTable").bootstrapTable({
        data:rooms
    });

    //可编辑
    $("#itemsTable").on("click-cell.bs.table", function(field, value, row, ele, dom){
        Global.editObj = ele;
        layer.open({
            type: 2,
            title: '编辑',
            shadeClose: true,
            maxmin: true,
            area : ['800px', '420px'],
            content: '$URL/merchant/admin/printer/printSchemeItemInput'
        })
    })

    //初始化表单
    $("#signupForm").validate({submitHandler: function() {
        var formData = getDataFromForm("signupForm");
        layer.load();
        var items = $("#itemsTable").bootstrapTable("getData");
        jQuery.ajax({
            url : "$URL/merchant/admin/printer/printSchemeEdit",
            data : {dataStr : JSON.stringify(formData), itemsStr : JSON.stringify(items), oper : "$oper"},
            type : "post",
            success : function(res){
                if(res.resultCode == 'SUCCESS'){
                    layer.msg("操作成功！");
                    layer.closeAll("loading");
                    closeCurrentLayerPage();
                }else {
                    layer.alert(res.errCodeDesc);
                    layer.closeAll("loading");
                }
            }
        })
    }});

</script>

</body>
</html>
